<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/goalInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your goal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/addGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Goal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/showGoalsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show My Goals"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Goals"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/exportCsvButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Check History"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready to check goals"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/totalViewCountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Goal Views: 0"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/goalsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>

</LinearLayout>